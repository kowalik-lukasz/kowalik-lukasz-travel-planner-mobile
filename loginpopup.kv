<LogInPopup>:
    username: username
    password: password
    error_message: error_message
    FloatLayout:
        Label:
            text: "Username"
            size_hint: 0.6, 0.1
            pos_hint: {"x":0, "top":0.95}
        TextInput:
            id:username
            size_hint: 0.6,0.1
            pos_hint: {"x":0.2, "top":0.85}
        Label:
            text: "Password"
            size_hint: 0.6, 0.1
            pos_hint: {"x":0, "top":0.65}
        TextInput:
            id:password
            password: True
            size_hint: 0.6,0.1
            pos_hint: {"x":0.2, "top":0.55}
        Button:
            text: "Submit"
            size_hint: 0.3, 0.12
            pos_hint: {"x":0.15, "top":0.3}
            on_press: root.log_in_check()
        Button:
            text: "Cancel"
            size_hint: 0.3, 0.12
            pos_hint: {"x": 0.55, "top":0.3}
            on_press: root.dismiss_popup()
        Label:
            id:error_message
            color: 1,0,0,1
            text: "Invalid username or password"
            pos_hint:{"x":0.25, "top":0.2}
            size_hint: 0.5, 0.15
            visible: False
            opacity: 1 if self.visible else 0