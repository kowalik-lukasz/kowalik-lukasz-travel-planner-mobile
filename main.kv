#:include travelplannermapview.kv
#:include loginpopup.kv
#:include contentnavdrawer.kv
#:include registerpopup.kv
#:include routemaker.kv
#:include tripviewer.kv

NavigationLayout:
    ScreenManager:
        id: screen_manager
        MapScreen:
            id: "main_view"
            name: "main_view"
            BoxLayout:
                orientation: 'vertical'
                MDToolbar:
                    id: toolbar
                    title: "Travel Planner"
                    left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
                    right_action_items: [['magnify', lambda x: app.search_menu.open()]]
                    md_bg_color: app.theme_cls.primary_color
                TravelPlannerMapView:
                    id: mapview
        RouteMakerScreen:
            id: "route_maker_view"
            name: "route_maker_view"
            BoxLayout:
                orientation: 'vertical'
                MDToolbar:
                    id: toolbar
                    title: "Travel Planner"
                    left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
                    md_bg_color: app.theme_cls.primary_color
                ScrollView:
                    RouteMaker:
                        id: route_maker

        MyTripsScreen:
            trip_viewer: trip_viewer
            id: "my_trips_view"
            name: "my_trips_view"
            BoxLayout:
                orientation: 'vertical'
                MDToolbar:
                    id: toolbar
                    title: "Travel Planner"
                    left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
                    md_bg_color: app.theme_cls.primary_color
                ScrollView:
                    id: scroll_view
                    TripViewer:
                        id: trip_viewer




    MDNavigationDrawer:
        id: nav_drawer
        ContentNavigationDrawer:
            screen_manager: screen_manager
            nav_drawer: nav_drawer
